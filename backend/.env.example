# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./database/blue-earth-watch.db

# JWT Secret (請更換為隨機字串)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# External API Keys
# OpenAQ Air Quality API
OPENAQ_API_KEY=your-openaq-api-key-here

# FreeWebApi Sea Surface Temperature API (optional)
FREEWEBAPI_SST_KEY=your-freewebapi-sst-key-here

# Global Plastic Watch (optional, for塑膠熱點)
GPW_API_TOKEN=

# Other optional APIs
# COPERNICUS_API_KEY=
# UNEP_API_KEY=

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
